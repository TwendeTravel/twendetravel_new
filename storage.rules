rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload/read profile images
    match /profile-images/{imageId} {
      allow read: if true; // Anyone can read profile images
      allow write, delete: if request.auth != null 
        && (resource == null || resource.metadata.uploadedBy == request.auth.uid);
    }
    
    // Allow authenticated users to read/write other files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
